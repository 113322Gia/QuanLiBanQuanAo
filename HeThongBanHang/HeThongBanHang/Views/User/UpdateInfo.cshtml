@model HeThongBanHang.Models.Customer
@{
    ViewData["Title"] = "UpdateInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Open Sans', sans-serif;
        background: #f7f7f7;
    }

    #update-info {
        width: 100%;
        margin: 50px auto;
        background-color: #fff;
        padding: 30px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    /* .section-title h2 { */
    /*     text-align: center; */
    /*     font-size: 24px; */
    /*     color: #333; */
    /*     margin-bottom: 30px; */
    /* } */

    .billing-details .form-group {
        margin-bottom: 20px;
    }

    .billing-details .input {
        width: 100%;
        padding: 12px;
        margin: 5px 0;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 16px;
        transition: all 0.3s ease;
    }

        /* Tạo hiệu ứng khi focus vào các input */
        .billing-details .input:focus {
            border-color: #1e90ff;
            outline: none;
            box-shadow: 0 0 5px rgba(30, 144, 255, 0.5);
        }

    button[type="submit"] {
        width: 100%;
        padding: 12px;
        background: #1e90ff;
        color: white;
        border: none;
        font-weight: bold;
        border-radius: 8px;
        cursor: pointer;
        font-size: 16px;
        transition: 0.3s;
    }

        button[type="submit"]:hover {
            background: #0066cc;
        }

    .alert-success {
        background-color: #28a745;
        color: white;
        padding: 10px;
        border-radius: 8px;
        text-align: center;
        margin-bottom: 20px;
        font-size: 16px;
    }
</style>


@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div class="col-md-12" id="update-info">
    <div class="section-title">
        <h2 class="title">UPDATE INFOMATION</h2>
    </div>
</div>
<div class="section">
    <div class="container">
        <div class="row">
            <form asp-action="UpdateInfo" asp-controller="User" method="post" class="w-100">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="col-md-6">
                    <div class="billing-details">



                        <div class="form-group">
                            <input class="input" type="text" name="FullName" value="@Model.FullName" placeholder="Full Name" required>
                        </div>
                        <div class="form-group">
                            <input class="input" type="email" name="Email" value="@Model.Email" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" name="Address" value="@Model.Address" placeholder="Address" required>
                        </div>
                        <div class="form-group">
                            <input class="input" type="text" name="City" value="@Model.City" placeholder="City" required>
                        </div>
                        <div class="form-group">
                            <input class="input" type="tel" name="Tel" value="@Model.Tel" placeholder="Telephone" required>
                        </div>
                        <button type="submit">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        setTimeout(function () {
            const path = window.location.pathname.toLowerCase();
            if (path.includes('/user/updateinfo/')) {
                const loginForm = document.getElementById('update-info');
                if (loginForm) {
                    loginForm.scrollIntoView({ behavior: 'smooth' });
                }
            }
        }, 500);  // Đợi một chút để chắc chắn DOM đã sẵn sàng
    });
</script>